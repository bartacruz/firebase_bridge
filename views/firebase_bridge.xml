<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Operations -->
    <record id="firebase_bridge_form" model="ir.ui.view">
        <field name="name">Firebase Bridge Form</field>
        <field name="model">firebase.bridge</field>
        <field name="arch" type="xml">
            <form string="firebase">
                <header>
                    <button class="oe_highlight" type="object" name="connect" string="Connect" context="{'firebase_id': active_id}" attrs="{'invisible': [('connected', '=', True)]}" />
                    <button class="btn-danger" type="object" name="disconnect" string="Disconnect" context="{'firebase_id': active_id}" attrs="{'invisible': [('connected', '=', False)]}" />
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server" />
                            <field name="port" />
                            <field name="use_ssl" />
                        </group>
                        <group>
                            <field name="server_id" />
                            <field name="server_key" />
                            <field name="server_domain" />
                            <field name="connected" />
                        </group>
                    </group>
                    <field name="session_ids" />
                </sheet>

            </form>
        </field>
    </record>
    <record id="firebase_bridge_tree_view" model="ir.ui.view">
        <field name="name">Firebase Bridge Tree</field>
        <field name="model">firebase.bridge</field>
        <field name="arch" type="xml">
            <tree name="firebase_bridges" string="Firebase Bridges">
                <field name="name" />
                <field name="server" />
                <field name="port" />
                <field name="server_domain" />
                <field name="connected" />
            </tree>
        </field>
    </record>

    <record id="action_firebase_bridges" model="ir.actions.act_window">
        <field name="name">Firebase Bridges</field>
        <field name="res_model">firebase.bridge</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new firebase bridge
            </p>
        </field>
    </record>
</odoo>